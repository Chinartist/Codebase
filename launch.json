        },
        {
            "name": "Python: 远程附加",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 4567
            },
            "pathMappings": [
                {
                    "localRoot": "${fileDirname}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        }

    ]
}

